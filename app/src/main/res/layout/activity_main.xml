<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.project.jpmc.jpmc.MainActivity">

    <EditText
        android:id="@+id/cityNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter City Name"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/getWeatherDataButton"
        android:text="Get Weather"
        android:layout_below="@+id/cityNameEditText"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/weatherResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:hint="Updated Result will be shown here"
        android:maxLines="5"
        android:layout_below="@+id/getWeatherDataButton"
        />

</RelativeLayout>
